<?xml version="1.0" encoding="utf-8"?>
<com.slinph.ihelmet.international.widget.MultiStateView
    android:id="@+id/multiStateView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:msv_emptyView="@layout/layout_load_empty"
    app:msv_errorView="@layout/layout_load_error"
    app:msv_loadingView="@layout/layout_loading"
    app:msv_viewState="loading">

    <com.slinph.ihelmet.international.widget.swiperefreshlayout.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:direction="both">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/gray_light"
            android:dividerHeight="5dp"/>

    </com.slinph.ihelmet.international.widget.swiperefreshlayout.SwipeRefreshLayout>
</com.slinph.ihelmet.international.widget.MultiStateView>