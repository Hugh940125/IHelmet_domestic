<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photo_notice"
        android:lineSpacingExtra="@dimen/spacing_tiny"
        android:textColor="@color/button_orange"
        android:padding="10dp"
        android:background="@color/global_theme_bg"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@color/global_theme_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_view"
            android:textSize="@dimen/font_middle"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/top_view_notice"
            android:lineSpacingExtra="@dimen/spacing_tiny"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/photo_test_bg_1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_top"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@mipmap/btn_photo"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:clickable="true"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@color/global_theme_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hair_line_view"
            android:textSize="@dimen/font_middle"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hair_line_view_notice"
            android:lineSpacingExtra="@dimen/spacing_tiny"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/photo_test_bg_2"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_hair_line"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@mipmap/btn_photo"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@color/global_theme_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rear_view"
            android:textSize="@dimen/font_middle"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rear_view_notice"
            android:lineSpacingExtra="@dimen/spacing_tiny"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/photo_test_bg_3"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_rear"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@mipmap/btn_photo"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@color/global_theme_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/side_view"
            android:textSize="@dimen/font_middle"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/side_view_notice"
            android:lineSpacingExtra="@dimen/spacing_tiny"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/photo_test_bg_4"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_side"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@mipmap/btn_photo"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </LinearLayout>
    <com.rey.material.widget.Button
        android:id="@+id/btn_next"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/common_btn_radius_blue_shape"
        android:text="@string/complete_and_upload"
        android:layout_marginBottom="60dp"
        android:textColor="@color/white"
        app:rd_enable="true" />
</LinearLayout>
</ScrollView>