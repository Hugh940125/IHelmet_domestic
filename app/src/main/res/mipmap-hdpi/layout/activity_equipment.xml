<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#EFEFF4"
        />
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Equipment name"
            android:textSize="19dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/drivce_name"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="19dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#EFEFF4"
        />
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hardware version"
            android:textSize="19dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/drivace_hardware_version"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="19dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D5DC"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Software version"
            android:textSize="19dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/drivace_software_version"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="19dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D5DC"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bluetooth version"
            android:textSize="19dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tv_bluetooth"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="19dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#EFEFF4"
        />
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Number of laser light"
            android:textSize="19dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tv_light_number"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="19dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D5DC"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Battery equipment"
            android:textSize="19dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tv_battery_capacity"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="19dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>




</LinearLayout>