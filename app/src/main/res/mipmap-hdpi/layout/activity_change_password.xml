<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="40dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/edittexth"
            android:background="@mipmap/bg_input_short"
            android:hint="Enter phone number"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:inputType="phone"
            android:maxLength="16"
            android:textAppearance="?android:textAppearanceSmall"
            />

        <Button
            android:id="@+id/btn_get_captcha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/edittexth"
            android:background="@mipmap/btn_auth_code"
            android:textSize="12sp"
            android:text="Verification code"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_captcha"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittexth"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/bg_input_box"
        android:hint="Input verification code"
        android:paddingLeft="5dp"
        android:inputType="number"
        android:singleLine="true"
        android:maxLength="8"
        android:textAppearance="?android:textAppearanceSmall"
        />

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittexth"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/bg_input_box"
        android:hint="Enter new password"
        android:paddingLeft="5dp"
        android:maxLength="16"
        android:singleLine="true"
        android:password="true"
        android:inputType="textUri|textMultiLine"
        android:textAppearance="?android:textAppearanceSmall"/>
    <EditText
        android:id="@+id/et_sure_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittexth"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:background="@mipmap/bg_input_box"
        android:hint="Confirm new password"
        android:paddingLeft="5dp"
        android:maxLength="16"
        android:singleLine="true"
        android:password="true"
        android:inputType="textUri|textMultiLine"
        android:textAppearance="?android:textAppearanceSmall"/>

    <com.rey.material.widget.Button
        android:id="@+id/btn_sure"
        android:layout_width="@dimen/edittextw"
        android:layout_height="45dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/common_btn_radius_blue_shape"
        app:rd_enable="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="CONFIRM"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>