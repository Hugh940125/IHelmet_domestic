<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_light_state"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="@string/discounected"
        android:textSize="20sp"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <com.slinph.ihelmet.ihelmet_domestic.view.XCArcProgressBar
        android:id="@+id/arcProgressBar_progress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android_custom:textColor="#666666"
        android_custom:textIsDisplayable="true"
        android_custom:textSize="50sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/loss_type"
        android:padding="5dp"
        android:textSize="15sp"
        android:layout_marginLeft="30dp"/>
</RelativeLayout>

    <!--android:background="@drawable/type_bg"-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D5DC"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_tpwd2x"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/temperature"
                />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#D3D5DC"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="â„ƒ"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_yzd2x"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/wet_degree"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D5DC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/progress_icon"
            android:drawablePadding="10dp"
            android:text="@string/process"
            android:gravity="center_vertical"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_processtext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="#A1A1A1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <com.slinph.ihelmet.ihelmet_domestic.view.NumberProgressBar
            android:id="@+id/numberbar1"
            style="@style/NumberProgressBar_Twinkle_Night"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:padding="20dp"
            android:layout_marginStart="15dp"
            custom:progress_current="0"
            />

        <TextView
            android:id="@+id/tv_aggregate_scheduling"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="5dp"
            android:text="@string/tital"
            android:textSize="10sp"
            />
    </LinearLayout>
</LinearLayout>