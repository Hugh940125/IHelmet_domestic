<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_blue_dark">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:text="Complete info"
                android:id="@+id/tv_report_list"
                android:textSize="25sp"
                android:gravity="center"/>

<!--            <ImageButton
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/btn_back_wirth"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:id="@+id/ib_regis_back"/>-->
        </FrameLayout>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">


                <EditText
                    android:id="@+id/et_bind_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@mipmap/bg_input_box"
                    android:hint="Enter email"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

            <EditText
                android:id="@+id/et_bind_realname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittexth"
                android:layout_marginTop="15dp"
                android:background="@mipmap/bg_input_box"
                android:hint="Enter name"
                android:inputType="textUri|textMultiLine"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"/>

            <RadioGroup
                android:background="@mipmap/bg_input_box"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:textColor="@android:color/darker_gray"
                    android:id="@+id/rb_male"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="40dp"
                    android:buttonTint="@android:color/darker_gray"
                    android:layout_height="wrap_content"
                    android:text="@string/male"/>
                <RadioButton
                    android:textColor="@android:color/darker_gray"
                    android:id="@+id/rb_female"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="40dp"
                    android:buttonTint="@android:color/darker_gray"
                    android:layout_height="wrap_content"
                    android:text="@string/female"/>
            </RadioGroup>

            <EditText
                android:id="@+id/et_bind_age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittexth"
                android:layout_marginTop="15dp"
                android:background="@mipmap/bg_input_box"
                android:hint="Enter age"
                android:inputType="textUri|textMultiLine"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"/>

            <CheckBox
                android:layout_marginTop="15dp"
                android:id="@+id/cb_is_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:checked="true"
                android:text="I have agreed to the Use Agreement"
                android:textSize="16sp"
                />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/common_btn_radius_blue_shape"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="25sp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
