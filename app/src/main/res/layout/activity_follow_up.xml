<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.slinph.ihelmet.ihelmet_domestic.activity.FollowUpActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_dark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/followup"
            android:id="@+id/tv_report_list"
            android:textSize="25sp"
            android:gravity="center"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_back_wirth"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:id="@+id/ib_followup_back"/>
    </FrameLayout>

    <ScrollView android:layout_height="match_parent"
                android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/gray_light"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:text="@string/compare_last"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/oil_jianshao"
            android:textSize="15sp"/>

        <com.slinph.ihelmet.ihelmet_domestic.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout_scalp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_spacing2"
            app:max_select="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/touxie_jiaoshao"
            android:textSize="15sp"/>

        <com.slinph.ihelmet.ihelmet_domestic.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout_dandruff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_spacing2"
            app:max_select="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/saoyang_jianqing"
            android:textSize="15sp"/>

        <com.slinph.ihelmet.ihelmet_domestic.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout_scalp_itching"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_spacing2"
            app:max_select="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:textSize="18sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/hongzhennongbao_jianshao"
            android:textSize="15sp"/>

        <com.slinph.ihelmet.ihelmet_domestic.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout_loss_speed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_spacing2"
            app:max_select="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/loss_speed_compare"
            android:textSize="15sp"/>

        <com.slinph.ihelmet.ihelmet_domestic.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout_treatment_newhair"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_spacing2"
            app:max_select="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/is_cuzhuang"
            android:textSize="15sp"/>

        <com.slinph.ihelmet.ihelmet_domestic.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout_treatment_cuzhuang"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_spacing2"
            app:max_select="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/is_medicine"
            android:textSize="15sp"/>

        <com.slinph.ihelmet.ihelmet_domestic.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout_treatment_medicine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_spacing2"
            app:max_select="1" />
    </LinearLayout>

    <com.slinph.ihelmet.ihelmet_domestic.view.flowlayout.TagFlowLayout
        android:id="@+id/flowlayout_treatment_effect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:visibility="gone"
        app:max_select="1" />

    <TextView
        android:id="@+id/tv_des_followup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#F77" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_btn_radius_blue_shape"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
